{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./build",
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
    // "emitDeclarationOnly": true,                      /* Only output d.ts files and not JavaScript files. */
  },
  "files": ["./index.ts"],
  "include": ["./hardhat.config.ts", "./typechain-types", "tslib"],
  "exclude": ["./ava.config.js"]
}
